.d-grid.justify-content-md-start.col-9.mx-auto.my-2
  %nav{ aria: { label: 'breadcrumb' } }
    %ol.breadcrumb
      %li.breadcrumb-item
        = link_to 'ランキング一覧', rankings_path
      %li.breadcrumb-item
        = link_to @ranking.title, ranking_songs_path(@ranking)
      %li.breadcrumb-item.active{ aria: { current: 'page' } }
        = @song.title

.text-center.my-2
  %h1= @ranking.title
  %h4= @song.model
  %h4= @song.title

.container
  .table-responsive
    %table.table
      %thead
        %tr
          %th プレイヤー名
          %th スコア
          %th コメント

      %tbody
        %tr
          %td= @submission.screen_name
          %td= @submission.score
          %td= @submission.comment

= @submission.image.present? ? image_tag(@submission.image, class: 'img-fluid mx-auto d-block') : '画像はありません'
